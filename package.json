{
  "name": "william",
  "version": "0.1.0",
  "description": "Autonomous orchestrator for managing development tasks",
  "type": "module",
  "bin": {
    "william": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup && cp -r templates dist/templates",
    "clean": "rm -rf dist",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@inquirer/prompts": "^8.3.0",
    "chokidar": "^4",
    "commander": "^12",
    "execa": "^9",
    "ink": "^5",
    "ink-spinner": "^5.0.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "react": "^18"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.56.1",
    "vitest": "^2"
  }
}
